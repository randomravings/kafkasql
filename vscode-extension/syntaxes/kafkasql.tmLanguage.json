{
  "name": "KafkaSQL",
  "scopeName": "source.kafkasql",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#type-declaration" },
    { "include": "#type-parametric" },
    { "include": "#as-alias" },
    { "include": "#scalar-type-reference" },
    { "include": "#read-from-clause" },
    { "include": "#write-to-clause" },
    { "include": "#where-clause" },
    { "include": "#field-reference-list" },
    { "include": "#stream-type-reference" },
    { "include": "#inline-type-declaration" },
    { "include": "#enum-symbol" },
    { "include": "#field-declaration" },
    { "include": "#literals" },
    { "include": "#operators" },
    { "include": "#member-reference" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-dash.kafkasql", "match": "--.*$" },
        { "name": "comment.block.kafkasql", "begin": "/\\*", "end": "\\*/" }
      ]
    },
    "keywords": {
      "patterns": [
        { "name": "keyword.control.kafkasql", "match": "(?i)\\b(CREATE|USE|READ|WRITE|INCLUDE)\\b" },
        { "name": "keyword.control.definition.kafkasql", "match": "(?i)\\b(CONTEXT|SCALAR|ENUM|STRUCT|UNION|STREAM)\\b" },
        { "name": "keyword.control.clause.kafkasql", "match": "(?i)\\b(TYPE|FROM|TO|AS|VALUES|WHERE|DEFAULT|CHECK|COMMENT|DISTRIBUTE|BY|WITH|TIMESTAMP)\\b" },
        { "name": "keyword.other.logical.kafkasql", "match": "(?i)\\b(AND|OR|NOT|IS|BETWEEN|IN)\\b" },
        { "name": "constant.language.null.kafkasql", "match": "(?i)\\bNULL\\b" }
      ]
    },
    "type-declaration": {
      "match": "(?i)\\b(CONTEXT|ENUM|STRUCT|UNION|SCALAR|STREAM)\\s+([A-Za-z_][A-Za-z0-9_.]*)",
      "captures": {
        "1": { "name": "keyword.control.definition.kafkasql" },
        "2": { "name": "entity.name.type.kafkasql" }
      }
    },
    "enum-symbol": {
      "match": "\\b([A-Z_][A-Z0-9_]*)\\s*(:)",
      "captures": {
        "1": { "name": "entity.other.attribute-name.kafkasql" },
        "2": { "name": "punctuation.separator.colon.kafkasql" }
      }
    },
    "field-declaration": {
      "begin": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s+(?=[A-Za-z])",
      "beginCaptures": {
        "1": { "name": "variable.other.property.kafkasql" }
      },
      "end": "(?=[,)])",
      "patterns": [
        { "include": "#type-collection" },
        { "include": "#type-parametric" },
        { "include": "#type-primitive" },
        { "include": "#keywords" },
        { "match": "[A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)*\\b", "name": "entity.name.type.kafkasql" },
        { "include": "#literals" }
      ]
    },
    "inline-type-declaration": {
      "begin": "(?i)\\b(TYPE)\\s*(\\()",
      "beginCaptures": {
        "1": { "name": "keyword.control.clause.kafkasql" },
        "2": { "name": "punctuation.section.parens.begin.kafkasql" }
      },
      "end": "(\\))",
      "endCaptures": {
        "1": { "name": "punctuation.section.parens.end.kafkasql" }
      },
      "patterns": [
        { "include": "#comments" },
        { "include": "#field-declaration" },
        { "match": ",", "name": "punctuation.separator.comma.kafkasql" }
      ]
    },
    "field-reference-list": {
      "begin": "(?i)(DISTRIBUTE|TIMESTAMP)\\s+(BY)\\s*(\\()",
      "beginCaptures": {
        "1": { "name": "keyword.control.clause.kafkasql" },
        "2": { "name": "keyword.control.clause.kafkasql" },
        "3": { "name": "punctuation.section.parens.begin.kafkasql" }
      },
      "end": "(\\))",
      "endCaptures": {
        "1": { "name": "punctuation.section.parens.end.kafkasql" }
      },
      "patterns": [
        { "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b", "name": "variable.other.property.kafkasql" },
        { "match": ",", "name": "punctuation.separator.comma.kafkasql" }
      ]
    },
    "where-clause": {
      "begin": "(?i)\\b(WHERE)\\b",
      "beginCaptures": {
        "1": { "name": "keyword.control.clause.kafkasql" }
      },
      "end": "(?i)(?=\\b(TYPE|;)\\b)",
      "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#literals" },
        { "include": "#operators" },
        { "match": "(?<!\\.)\\b[A-Za-z_][A-Za-z0-9_]*\\b(?!\\.|::|\\$)", "name": "variable.other.property.kafkasql" },
        { "include": "#punctuation" }
      ]
    },
    "stream-type-reference": {
      "match": "(?i)\\b(TYPE)\\s+([A-Za-z_][A-Za-z0-9_]*)(?=\\s|$)",
      "captures": {
        "1": { "name": "keyword.control.clause.kafkasql" },
        "2": { "name": "variable.other.property.kafkasql" }
      }
    },
    "scalar-type-reference": {
      "match": "(?i)\\b(SCALAR)\\s+([A-Za-z_][A-Za-z0-9_.]*)\\s+(AS)\\b",
      "captures": {
        "1": { "name": "keyword.control.definition.kafkasql" },
        "2": { "name": "entity.name.type.kafkasql" },
        "3": { "name": "keyword.control.clause.kafkasql" }
      }
    },
    "read-from-clause": {
      "match": "(?i)\\b(FROM)\\s+([A-Za-z_][A-Za-z0-9_.]*)",
      "captures": {
        "1": { "name": "keyword.control.clause.kafkasql" },
        "2": { "name": "entity.name.type.kafkasql" }
      }
    },
    "write-to-clause": {
      "match": "(?i)\\b(TO)\\s+([A-Za-z_][A-Za-z0-9_.]*)",
      "captures": {
        "1": { "name": "keyword.control.clause.kafkasql" },
        "2": { "name": "entity.name.type.kafkasql" }
      }
    },
    "as-alias": {
      "match": "(?i)\\b(AS)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.control.clause.kafkasql" },
        "2": { "name": "variable.other.property.kafkasql" }
      }
    },
    "field-projection": {
      "match": "^\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*,",
      "captures": {
        "1": { "name": "variable.other.property.kafkasql" }
      }
    },
    "member-reference": {
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)*(?!::|\\$)",
      "name": "variable.other.property.kafkasql"
    },
    "type-annotations": {
      "patterns": [
        { "include": "#type-collection" },
        { "include": "#type-parametric" },
        { "include": "#type-primitive" },
        { "include": "#type-reference" }
      ]
    },
    "type-collection": {
      "name": "meta.type.collection.kafkasql",
      "begin": "(?i)\\b(MAP|LIST)\\s*(<)",
      "beginCaptures": {
        "1": { "name": "storage.type.collection.kafkasql" },
        "2": { "name": "punctuation.definition.typeparameters.begin.kafkasql" }
      },
      "end": "(>)",
      "endCaptures": { "1": { "name": "punctuation.definition.typeparameters.end.kafkasql" } },
      "patterns": [
        { "match": ",", "name": "punctuation.separator.comma.kafkasql" },
        { "include": "#type-annotations" }
      ]
    },
    "type-parametric": {
      "name": "meta.type.parametric.kafkasql",
      "begin": "(?i)\\b(CHAR|FIXED|DECIMAL|TIME|TIMESTAMP|TIMESTAMP_TZ)\\s*(\\()",
      "beginCaptures": {
        "1": { "name": "storage.type.primitive.kafkasql" },
        "2": { "name": "punctuation.section.parameters.begin.kafkasql" }
      },
      "end": "(\\))",
      "endCaptures": { "1": { "name": "punctuation.section.parameters.end.kafkasql" } },
      "patterns": [
        { "include": "#number-literal" },
        { "match": ",", "name": "punctuation.separator.comma.kafkasql" }
      ]
    },
    "type-primitive": {
      "name": "storage.type.primitive.kafkasql",
      "match": "(?i)\\b(BOOL|INT8|INT16|INT32|INT64|FLOAT32|FLOAT64|STRING|BYTES|UUID|DATE)\\b"
    },
    "type-reference": {
      "name": "entity.name.type.kafkasql",
      "match": "[a-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)+(?!::|\\$)\\b"
    },
    "literals": {
      "patterns": [
        { "include": "#string-literal" },
        { "include": "#number-literal" },
        { "include": "#enum-literal" },
        { "include": "#union-literal" },
        { "include": "#list-literal" },
        { "include": "#struct-literal" },
        { "include": "#map-literal" }
      ]
    },
    "string-literal": {
      "patterns": [
        {
          "name": "string.quoted.single.kafkasql",
          "begin": "'", "end": "'",
          "patterns": [{ "name": "constant.character.escape.kafkasql", "match": "\\\\." }]
        },
        {
          "name": "string.quoted.double.kafkasql",
          "begin": "\"", "end": "\"",
          "patterns": [{ "name": "constant.character.escape.kafkasql", "match": "\\\\." }]
        }
      ]
    },
    "number-literal": {
      "name": "constant.numeric.kafkasql",
      "match": "\\b\\d+(?:\\.\\d+)?\\b"
    },
    "enum-literal": {
      "match": "([A-Za-z_][A-Za-z0-9_.]*)(::)([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "entity.name.type.enum.kafkasql" },
        "2": { "name": "punctuation.accessor.kafkasql" },
        "3": { "name": "entity.other.attribute-name.kafkasql" }
      }
    },
    "union-literal": {
      "match": "(\\.?[A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)*)(\\$)([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "entity.name.type.union.kafkasql" },
        "2": { "name": "punctuation.accessor.kafkasql" },
        "3": { "name": "entity.other.attribute-name.kafkasql" }
      }
    },
    "list-literal": {
      "begin": "\\[", "end": "\\]",
      "patterns": [
        { "include": "#literals" },
        { "match": ",", "name": "punctuation.separator.comma.kafkasql" }
      ]
    },
    "struct-literal": {
      "begin": "\\{", "end": "\\}",
      "patterns": [
        {
          "match": "([A-Za-z_][A-Za-z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "variable.other.property.kafkasql" },
            "2": { "name": "punctuation.separator.colon.kafkasql" }
          }
        },
        { "include": "#literals" },
        { "match": ",", "name": "punctuation.separator.comma.kafkasql" }
      ]
    },
    "map-literal": {
      "begin": "\\{", "end": "\\}",
      "patterns": [
        {
          "match": "(\\d+(?:\\.\\d+)?|'[^']*'|\"[^\"]*\")\\s*(:)",
          "captures": {
            "1": { "name": "constant.other.key.kafkasql" },
            "2": { "name": "punctuation.separator.colon.kafkasql" }
          }
        },
        { "include": "#literals" },
        { "match": ",", "name": "punctuation.separator.comma.kafkasql" }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.comparison.kafkasql", "match": "(==|!=|<=|>=|<|>)" },
        { "name": "keyword.operator.arithmetic.kafkasql", "match": "(\\+|\\-|\\*|/|%)" },
        { "name": "keyword.operator.assignment.kafkasql", "match": "=" }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "punctuation.terminator.statement.kafkasql", "match": ";" },
        { "name": "punctuation.separator.comma.kafkasql", "match": "," },
        { "name": "punctuation.section.parens.kafkasql", "match": "[()]" },
        { "name": "punctuation.section.brackets.kafkasql", "match": "[\\[\\]]" },
        { "name": "punctuation.section.braces.kafkasql", "match": "[{}]" },
        { "name": "punctuation.separator.colon.kafkasql", "match": ":" }
      ]
    }
  }
}
